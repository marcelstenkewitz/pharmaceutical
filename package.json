{
  "name": "pharmaceutical-tracking-system",
  "version": "1.0.0",
  "type": "commonjs",
  "description": "Pharmaceutical tracking system with barcode scanning for Form 222 management",
  "scripts": {
    "start": "cd backend && NODE_ENV=production node server.js",
    "build": "cd frontend && npm run build",
    "install-frontend": "cd frontend && npm install",
    "install-backend": "cd backend && npm install",
    "install-all": "npm run install-frontend && npm run install-backend",
    "dev-frontend": "cd frontend && npm start",
    "dev-backend": "cd backend && npm run dev",
    "docker-build": "docker build -t pharmaceutical-app .",
    "docker-run": "docker run -p 3001:3001 pharmaceutical-app"
  },
  "engines": {
    "node": ">=16.0.0"
  },
  "keywords": [
    "pharmaceutical",
    "barcode",
    "scanning",
    "form222",
    "dea",
    "inventory"
  ],
  "author": "",
  "license": "ISC"
}